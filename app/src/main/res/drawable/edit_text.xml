<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <corners android:topLeftRadius="12.5dp"
                android:topRightRadius="12.5dp"
                android:bottomLeftRadius="12.5dp"
                android:bottomRightRadius="12.5dp"/>
            <solid android:color="@color/green"/>
        </shape>
    </item>

    <item
        android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp">
        <shape
            android:shape="rectangle">
            <corners android:topLeftRadius="12.5dp"
                android:topRightRadius="12.5dp"
                android:bottomLeftRadius="12.5dp"
                android:bottomRightRadius="12.5dp"/>
            <solid android:color="@color/color_e"/>
        </shape>
    </item>

</layer-list>