<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_e">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/operateList"
        android:background="@color/color_e"
        android:dividerHeight="0.5dp"
        android:divider="@color/color_d">

    </ListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/linear_operate"
        android:background="@color/color_d"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linear_operate"
        android:background="@color/color_e"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/paste"
            android:background="@drawable/pressed"
            android:text="@string/copy"
            android:textSize="15sp"
            android:textColor="@color/color_0"/>

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_c"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:background="@drawable/pressed"
            android:text="@string/cancel"
            android:textSize="15sp"
            android:textColor="@color/color_0"/>

    </LinearLayout>

</RelativeLayout>